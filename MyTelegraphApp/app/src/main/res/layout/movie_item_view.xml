<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/movie_item_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210dp">

        <ImageView
            android:id="@+id/movie_poster_iv"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:scaleType="centerCrop"
            android:src="@drawable/test" />


        <LinearLayout
            android:id="@+id/movie_detail_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/movie_poster_iv"
            android:orientation="vertical">

            <TextView
                android:id="@+id/movie_headline_tv"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="left|top"
                android:text="1111111"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/movie_description_tv"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:ellipsize="end"
                android:freezesText="true"
                android:gravity="left|top"
                android:maxLines="1"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/movie_rate_tv"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:freezesText="true"
                android:gravity="left|top" />

            <TextView
                android:id="@+id/movie_actor_tv"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:ellipsize="end"
                android:freezesText="true"
                android:gravity="left|top"
                android:maxLines="4" />

            <TextView
                android:id="@+id/movie_more_info"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:freezesText="true"
                android:text="@string/more_info"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>